# Environment file for BiteBot
# Copy this file to .env and fill in your actual values
# DO NOT commit the .env file to source control!

# ============================================
# Discord Bot Configuration
# ============================================
# Get your bot token from: https://discord.com/developers/applications
DiscordToken=YOUR_DISCORD_BOT_TOKEN_HERE

# Your Discord Server (Guild) ID
# Enable Developer Mode in Discord, then right-click your server → Copy Server ID
GuildID=YOUR_DISCORD_GUILD_ID_HERE

# ============================================
# PostgreSQL Database Configuration
# ============================================
# These are used by the PostgreSQL container
POSTGRES_USER=bitebot-admin
POSTGRES_PASSWORD=your-secure-password-here
POSTGRES_DB=bitebot_db
POSTGRES_PORT=5432

# Connection string for local development (outside Docker)
# Update the password to match POSTGRES_PASSWORD above
DefaultConnection=Host=127.0.0.1;Port=5432;Database=bitebot_db;Username=bitebot-admin;Password=your-secure-password-here

# ============================================
# Ollama AI Configuration
# ============================================
# URL for Ollama service (localhost for local development, Docker handles container URL)
OllamaUrl=http://localhost:11434

# The AI model to use for summarization
# Options: llama3.1, llama3, mistral, codellama, etc.
# See https://ollama.com/library for available models
OllamaModel=llama3.1
OLLAMA_MODEL=llama3.1

